{
  "test_page": "./testem/jasmine2runner.mustache",
	"serve_files": [
		"./testem/compiled/**/*.js"
	],
  "src_files": [
        "src/**/*.js",
        "test/**/*.js"
  ],
	"before_tests": "esbuild test/*-spec.js --bundle --outdir=testem/compiled --platform=browser --format=iife --target=es2015 --sourcemap",
	"launch_in_dev": ["Chromium", "Firefox"],
	"launch_in_ci": ["Chromium", "Firefox"],
	"browser_args": {
	 "Chromium": [
			"--headless=new",
			"--no-sandbox",
			"--disable-setuid-sandbox",
			"--disable-dev-shm-usage",
			"--disable-gpu"
		],
		"Firefox": [
			"--headless"
		]
	},
  "routes": {
    "/jasmine": "node_modules/jasmine-core/lib/jasmine-core"
  }
}
